<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="250 244" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../java/com/minecolonies/blockout/blockOut.xsd">

<image source="minecolonies:textures/gui/citizen/colonist_papper.png" pos="0 -15" size="190 244"/>


    <label size="100% 11" pos="60 0"
           label="$(com.minecolonies.coremod.gui.citizen.requests)" color="black"/>
    <list id="requests" size="78% 90%" pos="20 20">
        <box id="requestx" size="85% 38" linewidth="2">
            <!--Item icon -->
            <itemicon id="requestStack" size="16 16" pos="1 1"/>

            <!--Request name-->
            <buttonimage id="detail" size="16 16" pos="20 1" source="minecolonies:textures/gui/citizen/detail_button.png"/>

            <!--Requester location-->
            <label id="targetLocation" size="50 12" pos="38 3" color="black"/>
            <!-- Color green if possible? -->
            <buttonimage id="fulfill" size="37 16" pos="20 20" textcolor="black"
                         label="$(com.minecolonies.coremod.gui.citizen.requestsFulfill)" source="minecolonies:textures/gui/citizen/colonist_button_small.png"/>

           <!-- button to cancel the request-->
            <buttonimage id="cancel" size="37 16" pos="110 20" textcolor="black"
                         label="$(com.minecolonies.coremod.gui.citizen.requestsCancel)" source="minecolonies:textures/gui/citizen/colonist_button_small.png"/>

            <!--TODO: Add player resolving buttons.-->
        </box>
    </list>
    <buttonimage id="back" size="37 16" pos="75 180" textcolor="black"
                 label="Back" source="minecolonies:textures/gui/citizen/colonist_button_small.png"/>

</layout>